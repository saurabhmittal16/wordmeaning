{
    "name": "Word Meaning",
    "version": "1.0",
    "description": "Word Meaning",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["declarativeContent", "tabs", "activeTab"],
    "page_action": {
        "default_popup": "popup.html",
        "default_title": "Word Meaning"
    },
    "icons": {
        "16": "image.png",
        "32": "image.png",
        "48": "image.png",
        "128": "image.png"
    }
}